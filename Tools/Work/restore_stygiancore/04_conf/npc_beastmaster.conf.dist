###################################################################################################
#	BEASTMASTER NPC
###################################################################################################

# -------------------------------------------------------------------------------------
#  Announce the module when the player logs in?
#  Enable : 1
#  Disable: 0
# -------------------------------------------------------------------------------------
BeastMaster.Announce = 1

# -------------------------------------------------------------------------------------
#  Is the core Pet.cpp modified? (default: 0)
#  Enable : 1
#  Disable: 0
# -------------------------------------------------------------------------------------
BeastMaster.CorePatch = 1

# -------------------------------------------------------------------------------------
# Required level to adopt beasts
#  Default: 10
#  Disable: 0
# -------------------------------------------------------------------------------------
BeastMaster.MinLevel = 10

# -------------------------------------------------------------------------------------
# Enable only for the Hunter class?
#  Enable : 0
#  Disable: 0
# -------------------------------------------------------------------------------------
BeastMaster.HunterOnly = 0

# -------------------------------------------------------------------------------------
# Hunters are required to have beast mastery to adopt exotic pets
#  Enable : 0
#  Disable: 0
# -------------------------------------------------------------------------------------
BeastMaster.TalentRequired = 0

# -------------------------------------------------------------------------------------
#  Allow adoption of exotic beasts (Spirit Beast) without Beast Mastery talent
#  Enable : 1
#  Disable: 0
# -------------------------------------------------------------------------------------
BeastMaster.AdoptExotic = 1

# -------------------------------------------------------------------------------------
#  Beast's are always happy!
#  Enable : 1
#  Disable: 0
# -------------------------------------------------------------------------------------
BeastMaster.KeepBeastHappy = 1

# -------------------------------------------------------------------------------------
#  Make your beasts larger or smaller when spawned
#  Default: 1.00
# -------------------------------------------------------------------------------------
BeastMaster.BeastScale = 1.00

# -------------------------------------------------------------------------------------
#  How often does the NPC emote in milliseconds?
#  Randomly caclulated within range 60000 (1 min, minumum) to 3000000 (5 minutes, max)
#  Default: 60000 (1 minutes, minimum)
#  Disable: 0
# -------------------------------------------------------------------------------------
BeastMaster.MessageTimer = 60000

# -------------------------------------------------------------------------------------
#  How many pharases does the NPC have?
#  Default: 3
# -------------------------------------------------------------------------------------
BeastMaster.NumPhrases = 3

# -------------------------------------------------------------------------------------
#  NPC Phrases - Add your own!
#  Spoken randomly to the world
# -------------------------------------------------------------------------------------
BM.P1 = "My beasts are the finest across all of Azeroth!"
BM.P2 = "Need an assassin? a henchman? Try one of my beasts instead!"
BM.P3 = "My exotic beasts are one of a kind!"

# -------------------------------------------------------------------------------------
#  The spell cast to get the player's attention
#  Default: 44940
#  Disable: 0
# -------------------------------------------------------------------------------------
BeastMaster.EmoteSpell = 0

# -------------------------------------------------------------------------------------
#  The gesture the NPC performs when speaking emote text
#  Default: 3 (Wave)
#  Disable: 0
# -------------------------------------------------------------------------------------
#  0  - NONE       
#  1  - TALK       
#  2  - BOW        
#  3  - WAVE       
#  4  - CHEER      
#  5  - EXCLAMATION
#  6  - QUESTION   
#  7  - EAT        
#  11 - LAUGH      
#  14 - RUDE       
#  15 - ROAR       
#  16 - KNEEL      
#  17 - KISS       
#  18 - CRY        
#  19 - CHICKEN    
#  20 - BEG        
#  21 - APPLAUD    
#  22 - SHOUT      
#  23 - FLEX       
#  24 - SHY        
#  25 - POINT      
# -------------------------------------------------------------------------------------    
BeastMaster.EmoteCommand = 3

